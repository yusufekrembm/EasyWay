<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.EasyWay" parent="Base.Theme.EasyWay" />

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RatingBarTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="NunitoRegularStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="NunitoSemiBoldStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="TitleStyle" parent="android:Widget.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:lineSpacingMultiplier">0.75</item>
    </style>

</resources>